<%include ../partials/header%>
    
    <div class="container">
        <header class="jumbotron">
                <div class="container">
                        <h1>See all the beauties!</h1>
                        <p>View our hand-picked flowers</p>
                        <p>
                                <a class="btn btn-primary btn-lg" href="/flowertypes/new">Add New Flower</a>
                        </p>
                </div>
        </header>
        <div class="row text-center" style="display:flex; flex-wrap:wrap;">
                <% flowertypes.forEach(function(flowertype){%>
                <div class="col-md-3 col-sm-6">
                        <div class="thumbnail">
                                <img src="<%= flowertype.image %>">
                                <div class="caption">
                                        <h4><%= flowertype.name %></h4>
                                </div>
                                <p>
                                        <a href="/flowertypes/<%= flowertype._id %>" class="btn btn-primary">More Info</a>
                                </p>
                        </div>
                </div>
                <%});%>
        </div>
        
    </div>
<%include ../partials/footer%>
